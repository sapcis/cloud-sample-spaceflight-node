<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="space.itineraries.company.ui.controller.ListBookings">
	<App>
		<pages>
			<Page title="Space Itineraries Company">
				<content>
				    <List noDataText="Drop list items here" id="list0" items="{/Bookings}">
				        <items>
				            <StandardListItem title="{CustomerName} travels from {Itinerary/Name}" description="Booking number {BookingNo} on {DateOfTravel}" icon="sap-icon://picture" id="item0"/>
				        </items>
				    </List>
				</content>
			<headerContent>
			    <Button xmlns="sap.m" text="Refresh" id="button0" press="onRefresh"/>
			</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>